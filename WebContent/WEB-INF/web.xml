<?xml version="1.0" encoding="UTF-8"?>
<web-app id="molgenis" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>molgenis</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<listener>
		<listener-class>app.servlet.ContextListener</listener-class>
	</listener>
	<resource-ref>
		<res-ref-name>jdbc/molgenisdb</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<servlet>
		<servlet-name>MolgenisServlet</servlet-name>
		<servlet-class>app.servlet.MolgenisServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>StaticMethods</display-name>
		<servlet-name>StaticMethods</servlet-name>
		<servlet-class>test.StaticMethods</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RestServlet</servlet-name>
		<servlet-class>org.apache.cxf.jaxrs.servlet.CXFNonSpringJaxrsServlet</servlet-class>
		<init-param>
			<param-name>jaxrs.serviceClasses</param-name>
			<param-value>
    			app.servlet.RestApi	      
  			</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>MolgenisServlet</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MolgenisServlet</servlet-name>
		<url-pattern>/api/find/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RestServlet</servlet-name>
		<url-pattern>/api/rest/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MolgenisServlet</servlet-name>
		<url-pattern>/api/add</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MolgenisServlet</servlet-name>
		<url-pattern>/api/R/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MolgenisServlet</servlet-name>
		<url-pattern>/api/soap/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MolgenisServlet</servlet-name>
		<url-pattern>/xref/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MolgenisServlet</servlet-name>
		<url-pattern>/download/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StaticMethods</servlet-name>
		<url-pattern>/StaticMethods</url-pattern>
	</servlet-mapping>

